extends layout.jade

block content
	//Full width image
	.container-fluid
	row.featurette-image.thick
		img.full(src='/content/img/Events_01.jpg')
	hr.featurette-divider

	//Image left aligned
	each item, index in _mainInfo.eventItems
		.container-fluid.fixed-medheight
			row.featurette
				.col-md-6
					img.featurette-image.img-responsive(src=src=item.image1, alt='Image')
				.col-md-6.text-center
					h1.vcenter #{item.type}
					p #{item.description}
					p
						a.btn.btn-lg.btn-primary(href='#', role='button') #{item.button}
		hr.featurette-divider
		



