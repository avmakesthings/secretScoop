extends layout.jade

block content
	//Full width image
	.container-fluid
		row.featurette-image.thick
			img.full(src='/content/img/Events_01.jpg')
		.carousel-caption.imgtextcenter
			h1.big.hidden-xs WE CATER EVENTS
		hr.featurette-divider
		row.featurette
			.col-md-6.visible-xs
				h1.big WE CATER EVENTS				
			.col-md-6
				img.featurette-image.img-responsive(src =_mainInfo.serviceItem.image1, alt='Image', style='max-width:none; width:100%;')
			.col-md-6.text-center
				h1.vcenter #{_mainInfo.serviceItem.type}
				h3.centered.para #{_mainInfo.serviceItem.description}
				p
					a.btn.btn-lg.btn-primary(href='mailto:secretscoopgelato@gmail.com', role='button', style= 'margin:30px;') #{_mainInfo.serviceItem.button}
	hr.featurette-divider


	//Image left aligned
	each item, index in _mainInfo.eventItems
		.container-fluid.fixed-medheight
			row.featurette
				.col-md-6
					img.featurette-image.img-responsive(src=item.image1, alt='Image')
				.col-md-6.text-center
					h1.vcenter #{item.type}
					h3.centered.para #{item.description}
					//- p
					//- 	a.btn.btn-lg.btn-primary(href='mailto:helloworld@example.com', role='button', style= 'margin:30px;') #{item.button}
		hr.featurette-divider
		



