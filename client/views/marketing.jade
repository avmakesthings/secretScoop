//Full width text
.container-fluid
  .row.whitespace
    .col-md-12
      h2.centered.hidden-xs  Sample the flavors of Thailand
      h2.hidden-xs You'll love every unique taste!


//Full width image
.container-fluid.hidden-xs
  .row.medium
    .col-md-12.medium
      img(src='/content/img/Home_04.jpg')
      .carousel-caption.imgtextcenter.cc-top-aligned
        h1 EAT - ALL - NATURAL
hr.featurette-divider

//Image right aligned
.container-fluid
  each item, index in _mainInfo.marketingItems
    .row.featurette
      .col-md-6
        h1.vcenter #{item.headline}
        p #{item.paragraph}
        p
          a.btn.btn-lg.btn-primary(href='/about', role='button') #{item.button}
      hr.featurette-divider.visible-sm
      .col-md-6.medium.hidden-xs
        img.featurette-image.img-responsive(src=src=item.image, alt='Image')


.container-fluid
  hr.featurette-divider
  .row.thick
    img.full(src='/content/img/Home_06.jpg')
  hr.featurette-divider

