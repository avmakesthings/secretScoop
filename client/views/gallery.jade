// Carousel
// ==================================================
//Set carousel to false to not slide through images
#myCarousel.carousel.slide(data-ride='carousel' data-interval='false')
  // Indicators
  //- ol.carousel-indicators
  //-   li.active(data-target='#myCarousel', data-slide-to='0')
  //-   li(data-target='#myCarousel', data-slide-to='1')
  //-   li(data-target='#myCarousel', data-slide-to='2')
  .carousel-inner
    each item, index in _mainInfo.galleryItems
      if index == 0 
        .item.active
          img(src=item.image, alt='First slide')
          .container.hidden-phone
            .carousel-caption.imgtextbottom
              h1.big #{item.headline}
              p #{item.subheadline}
              p.para_small #{item.paragraph}
                //- a.btn.btn-lg.btn-primary(href='#', role='button') #{item.button}
      else 
        .item
          img(src=item.image, alt='First slide')
          .container.hidden-phone
            .carousel-caption
              h1 #{item.headline}
              p #{item.subheadline}
              p
                a.btn.btn-lg.btn-primary(href='#', role='button') #{item.button}
